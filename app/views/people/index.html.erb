<p id="notice"><%= notice %></p>

<div id="view-info">
  <h2>People Index View</h2> 
  <button id="add-button">
  <%= link_to '+ Add New Person', new_person_path %></button>
</div>

<div id="people-form" style="display:none;">
  
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email address</th>
      <th>About</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.address %></td>
        <td><%= person.phone %></td>
        <td><%= person.email_address %></td>
        <td><%= person.about %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to "Edit", edit_person_path(person), remote: true, class: "btn btn-default" %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' }  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

