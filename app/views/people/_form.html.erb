<%if !current_user%>
  <div id='blank'>
    <div id='alert'>
      <h3>Must be SIGNED IN to add Person!</h3>
    </div>
  </div> 
<%end%>

<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for @person, remote: true, html: { style: "display:inline;" } do |f| %>
        <ul class="errors"></ul>

        <div class='field'>
	<%= f.label :name %><br>
<%= f.text_field :name%></div>
			<div class='field'>
	<%= f.label :address %><br>
<%= f.text_field :address%></div>
			<div class='field'>
	<%= f.label :phone %><br>
<%= f.text_field :phone%></div>
			<div class='field'>
	<%= f.label :email_address %><br>
<%= f.text_field :email_address%></div>
			<div class='field'>
	<%= f.label :about %><br>
<%= f.text_field :about%></div>
        
      
      <div class="actions">
        <%= f.submit class: "ajax-form-button" %>
        <%= link_to "Cancel", "#", class: "ajax-form-button", data: {dismiss: "modal"} %>
      </div>
      </div>
    <% end %>
  </div>
</div>
