<%if !current_user%>
  <div id='blank'>
    <div id='alert'>
      <h3>Must be SIGNED IN to add Post!</h3>
    </div>
  </div> 
<%end%>

<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for @post, remote: true, html: { style: "display:inline;" } do |f| %>
        <ul class="errors"></ul>

        <div class='field'>
	<%= f.label :subject %><br>
<%= f.text_field :subject%></div>
			<div class='field'>
	<%= f.label :content %><br>
<%= f.text_field :content%></div>
        
      
      <div class="actions">
        <%= f.submit class: "ajax-form-button" %>
        <%= link_to "Cancel", "#", class: "ajax-form-button", data: {dismiss: "modal"} %>
      </div>
      </div>
    <% end %>
  </div>
</div>
